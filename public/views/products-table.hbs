<div class="container m-5">
    <div class="mt-5">
        <div class="table-responsive mt- rounded-lg">
            <h4 class="text-danger">Vista de Productos:</h4>
            {{#if products.length}}
            <table class="table table-dark rounded-lg">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Foto</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products }}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>${{this.precio}}</td>
                        <td>{{this.stock}}</td>
                        <td><img width="48" src={{this.foto}} alt="image"></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <h5 class="alert alert-danger">No se encontraron productos.</h5>
            {{/if}}
        </div>
    </div>
</div>